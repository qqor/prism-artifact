diff --git a/encoding.c b/encoding.c
index adecdcc6..11722c98 100644
--- a/encoding.c
+++ b/encoding.c
@@ -2846,6 +2846,7 @@ UTF32ToUTF8(unsigned char *out, int *outlen,
     const unsigned char *instart = in;
     const unsigned char *inend = in + (*inlen & ~1);
     unsigned char *outstart = out;
+    unsigned char *outend = out + *outlen;
     unsigned long int b0, b1, b2, b3, c, d;
     int ret = XML_ENC_ERR_SPACE;
 
@@ -2865,15 +2866,21 @@ UTF32ToUTF8(unsigned char *out, int *outlen,
         c = b0 | b1 | b2 | b3;
 
         if (c < 0x80) {
+            if (out >= outend)
+                goto done;
             out[0] = c;
             in += 4;
             out += 1;
         } else if (c < 0x800) {
+            if (outend - out < 2)
+                goto done;
             out[0] = (c >> 6)   | 0xC0;
             out[1] = (c & 0x3F) | 0x80;
             in += 4;
             out += 2;
         } else if ((c & 0xF800) != 0xD800) {
+            if (outend - out < 3)
+                goto done;
             out[0] =  (c >> 12)         | 0xE0;
             out[1] = ((c >>  6) & 0x3F) | 0x80;
             out[2] =  (c        & 0x3F) | 0x80;
@@ -2887,6 +2894,8 @@ UTF32ToUTF8(unsigned char *out, int *outlen,
             }
 	        if (inend - in < 4)
 		        break;
+            if (outend - out < 4)
+                goto done;
             d = in[2] | (in[3] << 8);
             if ((d & 0xFC00) != 0xDC00) {
                 ret = XML_ERR_INTERNAL_ERROR;
@@ -2910,9 +2919,9 @@ UTF32ToUTF8(unsigned char *out, int *outlen,
         }
     }
 
-    if (in-instart > 0)
-        ret = out - outstart;
+    ret = out - outstart;
 
+done:
     *outlen = out - outstart;
     *inlen = in - instart;
     return(ret);
