 static CURLcode alliswellprotocoll_doing(struct Curl_easy *data, bool *done)
 {
+  /* Data and connection must be present */
+  if(!data || !data->conn) {
+    failf(data, "alliswell protocol: NULL connection context");
+    return CURLE_FAILED_INIT;
+  }
+
   struct connectdata *conn = data->conn;
   struct alliswellprotocoll_conn *vnormal = &conn->proto.vnormal;
 
+  /* vnormal pointer inside conn should never be NULL, but double-check */
+  if(!vnormal) {
+    failf(data, "alliswell protocol: NULL vnormal context");
+    return CURLE_FAILED_INIT;
+  }
+
   CURLcode result = Curl_pp_statemach(data, &vnormal->pp, FALSE, FALSE);
 
   *done = (vnormal->state == ALLISWELLPROTOCOLL_STOP);
 
   return result;
