+  /* Rationale: guard against use-after-free by ensuring the DoH context is still valid */
+  if(data->req.doh && data->set.no_signal)
     ERROR_CHECK_SETOPT(CURLOPT_NOSIGNAL, 1L);
 
   ERROR_CHECK_SETOPT(CURLOPT_SSL_VERIFYHOST,
@@ -314,13 +315,7 @@ static CURLcode doh_run_probe(struct Curl_easy *data,
   ERROR_CHECK_SETOPT(CURLOPT_SSL_VERIFYPEER,
     data->set.doh_verifypeer ? 1L : 0L);
