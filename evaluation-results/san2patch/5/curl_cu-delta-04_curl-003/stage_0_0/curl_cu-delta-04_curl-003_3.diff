--- a/lib/doh.c
+++ b/lib/doh.c
@@ -306,21 +306,18 @@ static CURLcode doh_run_probe(struct Curl_easy *data,
     ERROR_CHECK_SETOPT(CURLOPT_STDERR, data->set.err);
