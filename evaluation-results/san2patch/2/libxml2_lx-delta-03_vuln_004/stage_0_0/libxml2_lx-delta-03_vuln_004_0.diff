index adecdcc6..c9a9e147 100644
--- a/encoding.c
+++ b/encoding.c
@@ -2864,16 +2864,20 @@ UTF32ToUTF8(unsigned char *out, int *outlen,
         b3 = (b3 << 0x18);
         c = b0 | b1 | b2 | b3;
 
-        if (c < 0x80) {
+        /* Added per‐branch bounds checks to prevent one‐byte OOB writes */
+if (c < 0x80) {
+            if (out + 1 > outend) { ret = XML_ERR_INTERNAL_ERROR; break; }
             out[0] = c;
             in += 4;
             out += 1;
         } else if (c < 0x800) {
+            if (out + 2 > outend) { ret = XML_ERR_INTERNAL_ERROR; break; }
             out[0] = (c >> 6)   | 0xC0;
             out[1] = (c & 0x3F) | 0x80;
             in += 4;
             out += 2;
         } else if ((c & 0xF800) != 0xD800) {
+            if (out + 3 > outend) { ret = XML_ERR_INTERNAL_ERROR; break; }
             out[0] =  (c >> 12)         | 0xE0;
             out[1] = ((c >>  6) & 0x3F) | 0x80;
             out[2] =  (c        & 0x3F) | 0x80;
@@ -2885,22 +2889,15 @@ UTF32ToUTF8(unsigned char *out, int *outlen,
                 ret = XML_ERR_INTERNAL_ERROR;
                 break;
             }
-	        if (inend - in < 4)
-		        break;
+            if (inend - in < 4)
+                break;
+            if (out + 4 > outend) { ret = XML_ERR_INTERNAL_ERROR; break; }
             d = in[2] | (in[3] << 8);
             if ((d & 0xFC00) != 0xDC00) {
                 ret = XML_ERR_INTERNAL_ERROR;
                 break;
             }
-            /*
-                simplified due to encoding errors encountered with:
-
-                c = (c << 10) + d - ((0xD800 << 10) + 0xDC00 - 0x10000);
-                out[0] =  (c >> 18)         | 0xF0;
-                out[1] = ((c >> 12) & 0x3F) | 0x80;
-                out[2] = ((c >>  6) & 0x3F) | 0x80;
-                out[3] =  (c        & 0x3F) | 0x80;
-            */
+            /* preserve simplified write but now safe */
             out[0] = c & 0xff;
             out[1] = (c >> 8) & 0xff;
             out[2] = (c >> 0x10) & 0xff;
