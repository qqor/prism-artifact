diff --git a/encoding.c b/encoding.c
index adecdcc6..6c4aade8 100644
--- a/encoding.c
+++ b/encoding.c
@@ -2865,15 +2865,21 @@ UTF32ToUTF8(unsigned char *out, int *outlen,
         c = b0 | b1 | b2 | b3;
 
         if (c < 0x80) {
+            /* ensure there's room for 1 byte */
+            if (outend - out < 1) { ret = XML_ERR_INTERNAL_ERROR; break; }
             out[0] = c;
             in += 4;
             out += 1;
         } else if (c < 0x800) {
+            /* ensure there's room for 2 bytes */
+            if (outend - out < 2) { ret = XML_ERR_INTERNAL_ERROR; break; }
             out[0] = (c >> 6)   | 0xC0;
             out[1] = (c & 0x3F) | 0x80;
             in += 4;
             out += 2;
         } else if ((c & 0xF800) != 0xD800) {
+            /* ensure there's room for 3 bytes */
+            if (outend - out < 3) { ret = XML_ERR_INTERNAL_ERROR; break; }
             out[0] =  (c >> 12)         | 0xE0;
             out[1] = ((c >>  6) & 0x3F) | 0x80;
             out[2] =  (c        & 0x3F) | 0x80;
@@ -2885,22 +2891,15 @@ UTF32ToUTF8(unsigned char *out, int *outlen,
                 ret = XML_ERR_INTERNAL_ERROR;
                 break;
             }
-	        if (inend - in < 4)
-		        break;
+            if (inend - in < 4)
+                break;
+            /* ensure there's room for 4 bytes */
+            if (outend - out < 4) { ret = XML_ERR_INTERNAL_ERROR; break; }
             d = in[2] | (in[3] << 8);
             if ((d & 0xFC00) != 0xDC00) {
                 ret = XML_ERR_INTERNAL_ERROR;
                 break;
             }
-            /*
-                simplified due to encoding errors encountered with:
-
-                c = (c << 10) + d - ((0xD800 << 10) + 0xDC00 - 0x10000);
-                out[0] =  (c >> 18)         | 0xF0;
-                out[1] = ((c >> 12) & 0x3F) | 0x80;
-                out[2] = ((c >>  6) & 0x3F) | 0x80;
-                out[3] =  (c        & 0x3F) | 0x80;
-            */
             out[0] = c & 0xff;
             out[1] = (c >> 8) & 0xff;
             out[2] = (c >> 0x10) & 0xff;
