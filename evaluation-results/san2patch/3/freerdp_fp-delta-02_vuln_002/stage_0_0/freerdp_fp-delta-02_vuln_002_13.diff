@@ -1338,6 +1338,31 @@ rdpCertificate* freerdp_certificate_new_from_x509(const X509* xcert, const STACK
 	if (!cert->x509)
 		goto fail;
 
+	/* Bound-check each SAN with strnlen before processing */
+	{
+		STACK_OF(GENERAL_NAME)* san_list = X509_get_ext_d2i(cert->x509, NID_subject_alt_name, NULL, NULL);
+		if (san_list)
+		{
+			for (int i = 0; i < sk_GENERAL_NAME_num(san_list); i++)
+			{
+				GENERAL_NAME* san = sk_GENERAL_NAME_value(san_list, i);
+				if (san->type == GEN_DNS)
+				{
+					unsigned char* data = ASN1_STRING_data(san->d.dNSName);
+					int declared = ASN1_STRING_length(san->d.dNSName);
+					/* use strnlen to verify actual length */
+					int actual = (int)strnlen((char*)data, declared + 1);
+					if (actual != declared) /* embedded null or overflow */
+					{
+						sk_GENERAL_NAME_pop_free(san_list, GENERAL_NAME_free);
+						goto fail;
+					}
+				}
+			}
+			sk_GENERAL_NAME_pop_free(san_list, GENERAL_NAME_free);
+		}
+	}
+
 	if (!freerdp_rsa_from_x509(cert))
 		goto fail;
 
@@ -1355,18 +1380,37 @@ static rdpCertificate* freerdp_certificate_new_from(const char* file, BOOL isFil
 	X509* x509 = x509_utils_from_pem(file, strlen(file), isFile);
 	if (!x509)
 		return NULL;
+	/* Candidate 4: Validate SAN names using ASN1_STRING_to_UTF8 (which does bounds checking) */
+	{
+		GENERAL_NAMES* san_names = X509_get_ext_d2i(x509, NID_subject_alt_name, NULL, NULL);
+		if (san_names)
+		{
+			int num = sk_GENERAL_NAME_num(san_names);
+			for (int i = 0; i < num; i++)
+			{
+				GENERAL_NAME* san = sk_GENERAL_NAME_value(san_names, i);
+				if (san->type == GEN_DNS)
+				{
+					unsigned char* utf8 = NULL;
+					int len = ASN1_STRING_to_UTF8(&utf8, san->d.dNSName);
+					if (len < 0 || len > 512) /* too long or conversion error */
+					{
+						OPENSSL_free(utf8);
+						sk_GENERAL_NAME_pop_free(san_names, GENERAL_NAME_free);
+						X509_free(x509);
+						return NULL;
+					}
+					OPENSSL_free(utf8);
+				}
+			}
+			sk_GENERAL_NAME_pop_free(san_names, GENERAL_NAME_free);
+		}
+	}
+
 	rdpCertificate* cert = freerdp_certificate_new_from_x509(x509, NULL);
 	X509_free(x509);
