+    private static File validateAndCreateFile(File parent, String childName) throws IOException {
+        if (childName == null || childName.isEmpty()) {
+            throw new IOException("Child name cannot be null or empty");
+        }
+
+        String sanitizedName = childName;
+        sanitizedName = sanitizedName.replace("..", "_");
+        sanitizedName = sanitizedName.replace('/', '_');
+        sanitizedName = sanitizedName.replace('\\', '_');
+
